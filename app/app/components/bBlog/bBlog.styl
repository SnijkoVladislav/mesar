.h-blog
// 	&__header
	&__content
		cf()
		padding 25px 0px

.b-title
	display inline-block
	text-transform uppercase
	font-weight 800
	background #000
	color #fff
	padding 5px 6px
	letter-spacing 5px
	font-size 15px
	font-family 'Open Sans', sans-serif


.h-columns
	col(1/3, gutter:5)

.b-post
	&__title
		text-transform uppercase
		font-weight 800
		font-size 25px
		margin-bottom 10px
		letter-spacing 3px
		margin-top 20px
		line-height 1.1
	&__date
		font-weight bold
		text-transform uppercase
		background #ffdb43
		font-size 10px
		letter-spacing 2px
		padding 5px
	&__text
		font-size 15px
		line-height 25px
		letter-spacing 3px
		font-family 'Gentium Basic', serif
		font-size 15px
		color #888
	&__more-link
		text-decoration none
		color #222
		outline 0
		font-size 10px
		letter-spacing 2px
		font-weight bold
