.h-col-left
	span(2/3)
	+below(800px)
		span(1/1)
.h-col-right
	span(1/3)
	+below(800px)
		span(1/1, offset:.35)

.b-desc

	&__title
		padding-bottom 10px
		padding-top 0
		margin-top 0
		margin-bottom 10px
		text-transform uppercase
		font-weight 800
		font-size 45px
		font-family inherit
		letter-spacing 4px
		line-height 1.1
		color inherit

	&__text
		font-family 'Gentium Basic', serif
		color #888
		line-height 30px
		letter-spacing 3px
		font-size 16px
		padding-right 50px

	&__img
		display inline-block
		&._round
			height 100%
			border-radius 50%
			text-align center
