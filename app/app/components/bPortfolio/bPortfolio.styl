.b-portfilio
	&__title
		display inline-block
		text-transform uppercase
		font-weight 800
		background #000
		color #fff
		padding 5px 6px
		letter-spacing 5px
		font-size 15px
		font-family 'Open Sans', sans-serif
	&__content
		position relative
		cf()

.h-columns
	col(1/4 1/1)

.b-article
	overflow hidden
	margin 20px 0px 20px 0px
	position relative
	&:hover
		.b-article__name
			border 999px solid rgba(255,219,67,.9)
			opacity 1
		.b-article__previewImg
			transform scale(1.1)

	&__name
		align()
		padding 5px
		margin 0px
		font-size 14px
		opacity 0
		font-weight 800
		color #fff
		letter-spacing 6px
		line-height 1
		text-transform uppercase
		text-align center
		background #000
		transition all .25s ease-in-out
		cursor pointer
		background-clip padding-box
		z-index 999

	&__previewImg
		width 100%
		height 100%
		transition all .25s ease-in-out


.h-article-disc
	position absolute
	top 0px
	left 0px
	bottom 0px
	right 0px
	z-index 999
	cf()
	background-color rgba(0,0,0,.4)

.b-article-disc
	padding 10px
	border 10px solid #FFF
	position relative
	overflow-y scroll
	overflow-x hidden
	background-color #fff
	align()
	width 35%
	max-height 90%

	&__img
		width 100%

	&__title
		text-transform uppercase
		font-size 18px
		font-weight 800
		letter-spacing 2px
	&__text
		font-family 'Gentium Basic', serif
		line-height 30px
		letter-spacing 2px
		font-size 15px
		color #888
	&__close
		position absolute
		top 0px
		right 0px
		height 50px
		width 50px
		z-index 999

.b-close
	padding 0px
	margin 0px
	height 50px
	width 50px
	background-color transparent
	border 0px
	cf()
	transition all 0.25s linear
	&:hover
		transform rotate(90deg)
	&:before
		content ''
		position absolute
		left 50%
		top 50%
		display block
		height 30px
		width 4px
		background-color #000
		transform translate(-50%, -50%) rotate(180deg)
	&:after
		content ''
		position absolute
		left 50%
		top 50%
		display block
		height 30px
		width 4px
		background-color #000
		transform translate(-50%, -50%) rotate(-90deg)
