.h-col-left
	span(2/3)
	+below(800px)
		span(1/1)
		text-align center
.h-col-right
	span(1/3)
	+below(800px)
		span(1/1)
		margin 0px auto
		float none
		width 250px

.b-desc
	padding-top 200px
	padding-bottom 200px
	cf()

	&__title
		padding-bottom 10px
		padding-top 0
		margin-top 0
		margin-bottom 10px
		text-transform uppercase
		font-weight 800
		font-size 45px
		font-family inherit
		letter-spacing 4px
		line-height 1.1
		color inherit

	&__text
		color #888
		line-height 30px
		letter-spacing 3px
		font-size 14px
		padding-right 50px
		+below(800px)
			padding-right 0px

	&__img
		display inline-block
		&._round
			height 100%
			border-radius 50%
			text-align center
