.b-portfilio
	&__title
		display inline-block
		text-transform uppercase
		font-weight 800
		background #000
		color #fff
		padding 5px 6px
		letter-spacing 5px
		font-size 15px
		font-family 'Open Sans', sans-serif
	&__content
		cf()

.h-columns
	col(1/4 1/1)
	+below(800px)
		col(1/1)

.b-article
	overflow hidden
	margin 20px 0px 20px 0px
	position relative
	display block
	background-color #ffdb43
	cursor default
	cf()
	&:hover
		.b-article__name
			opacity 1
		.b-article__previewImg
			transform scale(1.1)
			opacity 0.4

	&__name
		align()
		padding 5px
		margin 0px
		font-size 14px
		opacity 0
		font-weight 800
		color #fff
		letter-spacing 6px
		line-height 1
		text-transform uppercase
		text-align center
		background #000
		transition all .25s ease-in-out
		background-clip padding-box
		z-index 999
		border 0px
		cursor pointer

	&__previewImg
		width 100%
		height 100%
		display block
		transition all .25s ease-in-out


.h-article-disc
	position absolute
	top 0px
	left 0px
	bottom 0px
	right 0px
	z-index 999
	background-color rgba(0,0,0,.4)
	cf()

.b-article-disc
	padding 10px
	border 10px solid #FFF
	background-color #fff
	width 40%
	height 100%
	overflow-y scroll
	align()
	position fixed
	z-index 1000
	+below(800px)
		width 96%

	&__img
		width 100%

	&__title
		text-transform uppercase
		font-size 18px
		font-weight 800
		letter-spacing 2px

	&__text
		line-height 30px
		letter-spacing 2px
		font-size 13px
		color #888

	&__close
		position absolute
		top 30px
		right 30px
		padding 0px
		margin 0px
		border 0px
		line-height 0.5
		background-color transparent
		transition all 0.25s linear
		transform rotate(45deg)
		font-size 50px
		z-index 999
		cf()
		&:hover
			transform rotate(-45deg)
